{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true

    // ⬇️ Explicitly mirror the alias so the app project always sees it
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "include": ["src"]
}
