
{
  "name": "amigos_unite_app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predev": "npm run build:themes",
    "dev": "npm-run-all -p -l watch:themes dev:ts dev:vite",
    "dev:vite": "vite",
    "dev:ts": "tsc -p tsconfig.dev.json --watch",

    "build": "npm run build:themes && tsc -p tsconfig.app.json && vite build",
    "preview": "vite preview",

    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",

    "build:themes": "npm-run-all build:themes:public build:themes:admin",
    "build:themes:public": "sass --style=compressed --no-source-map --load-path src/assets/sass src/themes/public/scss-palettes:public/themes/public/css-palettes",
    "build:themes:admin": "sass --style=compressed --no-source-map --load-path src/assets/sass src/themes/admin/scss-palettes:public/themes/admin/css-palettes",
    "watch:themes": "npm-run-all -p -l watch:themes:public watch:themes:admin",
    "watch:themes:public": "sass --watch --load-path src/assets/sass src/themes/public/scss-palettes:public/themes/public/css-palettes",
    "watch:themes:admin": "sass --watch --load-path src/assets/sass src/themes/admin/scss-palettes:public/themes/admin/css-palettes",
    "clean:themes": "rimraf public/themes/*/css-palettes",

    "test": "npm run lint && npm run typecheck"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "blueimp-md5": "^2.19.0",
    "crypto-js": "^4.2.0",
    "js-md5": "^0.8.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "^6.30.1",
    "sanitize.css": "^13.0.0"
  },
  "devDependencies": {
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.14.10",
    "@types/react": "18.3.23",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10",
    "sass": "^1.77.6",
    "sass-embedded": "^1.77.8",
    "sass-loader": "^14.2.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.5",
    "vite-plugin-html": "^3.2.2"
  }
}
