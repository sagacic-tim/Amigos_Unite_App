
@use '../../assets/sass/layout/grid' as default-grid;
@use '../../assets/sass/abstracts' as tokens;

.amigoDetailsItem {
  @include tokens.border-box;

  &__header {
    font-size: var('--heading-size-base:');
    margin-bottom: 1rem;
    color: var('secondary-heading-color');
  }

  &__field {
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: var('secondary-text-color');
  }

  &__locations {
    margin-top: 1rem;

    &-header {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      color: var('secondary-heading-color');
    }
  }
}

.amigo-detail-list {
  @include default-grid.grid-layout(); // â†’ uses default columns and gap
}
