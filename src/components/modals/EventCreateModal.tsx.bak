
// src/components/modals/events/EventCreateModal.tsx
import React, { useEffect, useRef, useState } from "react";
import { useNavigate } from "react-router-dom";
import useAuthStatus from "@/hooks/useAuthStatus";
import { EventService, EventLocationService } from "@/services/EventService";
import type { Event, EventCreateParams, EventStatus, EventLocation } from "@/types/events";
/** Minimal user inputs; backend/Geocoder derives the rest. */
type LocationDraft = Partial<
  Pick<
    EventLocation,
      | "business_name"
      | "floor"
      | "street_number"
      | "street_name"
      | "room_no"
      | "apartment_suite_number"
      | "city"
      | "state_province"
      | "country"
      | "postal_code"
  >
>;

const defaultEvent: EventCreateParams = {
  event_name: "",
  event_date: "", // yyyy-mm-dd
  event_time: "", // HH:MM
  status: "planning",
  event_type: "",
  event_speakers_performers: [],
};

const EventCreateModal: React.FC = () => {
  const { isLoggedIn } = useAuthStatus();
  const [open, setOpen] = useState(false);
  const [submitting, setSubmitting] = useState(false);
  const [error, setError] = useState<string | null>(null);

  // Step toggles
  const [addLocation, setAddLocation] = useState(false);

  // Form state
  const [ev, setEv] = useState<EventCreateParams>(defaultEvent);
  const [loc, setLoc] = useState<LocationDraft>({});
  const firstFieldRef = useRef<HTMLInputElement>(null);
  const navigate = useNavigate();

  // Open on "events:create"
  useEffect(() => {
    const handler = () => setOpen(true);
    document.addEventListener("events:create", handler as EventListener);
    return () => document.removeEventListener("events:create", handler as EventListener);
  }, []);

  // Close on Escape
  useEffect(() => {
    const keyHandler = (e: KeyboardEvent) => {
      if (open && e.key === "Escape") setOpen(false);
    };
    document.addEventListener("keydown", keyHandler);
    return () => document.removeEventListener("keydown", keyHandler);
  }, [open]);

  useEffect(() => {
    if (open) {
      // reset each time it opens
      setEv(defaultEvent);
      setLoc({});
      setAddLocation(false);
      setError(null);
      setTimeout(() => firstFieldRef.current?.focus(), 0);
    }
  }, [open]);

  const close = () => {
    if (submitting) return;
    setOpen(false);
  };

  const onChange = <K extends keyof EventCreateParams>(k: K, v: EventCreateParams[K]) => {
    setEv(prev => ({ ...prev, [k]: v }));
  }

  const onLocChange = (k: keyof LocationDraft, v: string) => {
    setLoc(prev => ({ ...prev, [k]: v }));
  };

  const submit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError(null);

    if (!isLoggedIn) {
      // Require login first
      document.dispatchEvent(new CustomEvent("auth:login"));
      return;
    }
    if (!ev.event_name || !ev.event_date || !ev.event_time) {
      setError("Please provide event name, date, and time.");
      return;
    }

    setSubmitting(true);
    try {
      // 1) Create Event
      const created = await EventService.create({
        event_name: ev.event_name.trim(),
        event_date: ev.event_date,
        event_time: ev.event_time.length === 5 ? ev.event_time + ":00" : ev.event_time, // normalize HH:MM → HH:MM:00
        status: ev.status ?? "planning",
        event_type: ev.event_type?.trim() || undefined,
        event_speakers_performers: ev.event_speakers_performers?.filter(Boolean) ?? [],
      });

      // 2) Optional: create & connect location
      if (addLocation && loc && (loc.business_name || loc.street_name)) {
        const createdLoc = await EventLocationService.create({
          business_name: loc.business_name?.trim(),
          street_number: loc.street_number?.trim(),
          street_name:   loc.street_name?.trim(),
          city:          loc.city?.trim(),
          state_province:loc.state_province?.trim(),
          postal_code:   loc.postal_code?.trim(),
          country:       loc.country?.trim(),
        });

        await EventService.connectLocation(created.id, createdLoc.id, true);
      }

      // 3) Success → close + navigate to manage page
      setOpen(false);
      navigate(`/events/${created.id}/manage`);
    } catch (err: any) {
      const msg =
        err?.response?.data?.error ||
        err?.response?.data?.message ||
        err?.message ||
        "Unable to create event.";
      setError(msg);
    } finally {
      setSubmitting(false);
    }
  };

  if (!open) return null;

  return (
    <div className="modal modal--open" role="dialog" aria-modal="true" aria-labelledby="create-event-title">
      <div className="modal__backdrop" onClick={close} />

      <div className="modal__panel" role="document">
        <header className="modal__header">
          <h2 id="create-event-title">Create New Event</h2>
          <button type="button" className="modal__close" onClick={close} aria-label="Close">×</button>
        </header>

        <form className="modal__body" onSubmit={submit}>
          {error && <div className="alert alert--error" role="alert">{error}</div>}

          <div className="form-row">
            <label htmlFor="ev-name">Event Name</label>
            <input
              id="ev-name"
              ref={firstFieldRef}
              type="text"
              value={ev.event_name}
              onChange={e => onChange("event_name", e.target.value)}
              required
            />
          </div>

          <div className="form-grid">
            <div className="form-row">
              <label htmlFor="ev-date">Date</label>
              <input
                id="ev-date"
                type="date"
                value={ev.event_date}
                onChange={e => onChange("event_date", e.target.value)}
                required
              />
            </div>
            <div className="form-row">
              <label htmlFor="ev-time">Time</label>
              <input
                id="ev-time"
                type="time"
                step={60}
                value={ev.event_time}
                onChange={e => onChange("event_time", e.target.value)}
                required
              />
            </div>
            <div className="form-row">
              <label htmlFor="ev-status">Status</label>
              <select
                id="ev-status"
                value={ev.status ?? "planning"}
                onChange={e => onChange("status", e.target.value as EventStatus)}
              >
                <option value="planning">Planning</option>
                <option value="active">Active</option>
                <option value="completed">Completed</option>
                <option value="canceled">Canceled</option>
              </select>
            </div>
          </div>

          <div className="form-row">
            <label htmlFor="ev-type">Type (optional)</label>
            <input
              id="ev-type"
              type="text"
              value={ev.event_type ?? ""}
              onChange={e => onChange("event_type", e.target.value)}
              placeholder="Workshop, Meetup, etc."
            />
          </div>

          {/* Optional: speakers/performers as comma-separated; backend will normalize */}
          <div className="form-row">
            <label htmlFor="ev-speakers">Speakers/Performers (optional)</label>
            <input
              id="ev-speakers"
              type="text"
              placeholder="Alice, Bob"
              onChange={(e) =>
                onChange(
                  "event_speakers_performers",
                  e.currentTarget.value
                    .split(",")
                    .map(s => s.trim())
                    .filter(Boolean)
                )
              }
            />
          </div>

          <hr className="form-divider" />

          <div className="form-row form-row--inline">
            <input
              id="ev-add-location"
              type="checkbox"
              checked={addLocation}
              onChange={e => setAddLocation(e.target.checked)}
            />
            <label htmlFor="ev-add-location">Add a primary location now</label>
          </div>

          {addLocation && (
            <fieldset className="fieldset">
              <legend>Location</legend>
              <div className="form-row">
                <label htmlFor="loc-business">Business/Venue Name (optional)</label>
                <input
                  id="loc-business"
                  type="text"
                  value={loc.business_name ?? ""}
                  onChange={e => onLocChange("business_name", e.target.value)}
                />
              </div>

              <div className="form-grid">
                <div className="form-row">
                  <label htmlFor="loc-street-number">Street Number</label>
                  <input
                    id="loc-street-number"
                    type="text"
                    value={loc.street_number ?? ""}
                    onChange={e => onLocChange("street_number", e.target.value)}
                  />
                </div>
                <div className="form-row">
                  <label htmlFor="loc-street-name">Street Name</label>
                  <input
                    id="loc-street-name"
                    type="text"
                    value={loc.street_name ?? ""}
                    onChange={e => onLocChange("street_name", e.target.value)}
                  />
                </div>
              </div>

              <div className="form-grid">
                <div className="form-row">
                  <label htmlFor="loc-city">City</label>
                  <input
                    id="loc-city"
                    type="text"
                    value={loc.city ?? ""}
                    onChange={e => onLocChange("city", e.target.value)}
                  />
                </div>
                <div className="form-row">
                  <label htmlFor="loc-state">State/Province</label>
                  <input
                    id="loc-state"
                    type="text"
                    value={loc.state_province ?? ""}
                    onChange={e => onLocChange("state_province", e.target.value)}
                  />
                </div>
                <div className="form-row">
                  <label htmlFor="loc-postal">Postal Code</label>
                  <input
                    id="loc-postal"
                    type="text"
                    value={loc.postal_code ?? ""}
                    onChange={e => onLocChange("postal_code", e.target.value)}
                  />
                </div>
                <div className="form-row">
                  <label htmlFor="loc-country">Country</label>
                  <input
                    id="loc-country"
                    type="text"
                    value={loc.country ?? ""}
                    onChange={e => onLocChange("country", e.target.value)}
                  />
                </div>
              </div>
            </fieldset>
          )}

          <footer className="modal__footer">
            <button type="button" className="btn" onClick={close} disabled={submitting}>Cancel</button>
            <button type="submit" className="btn btn--primary" disabled={submitting}>
              {submitting ? "Creating…" : "Create Event"}
            </button>
          </footer>
        </form>
      </div>
    </div>
  );
};

export default EventCreateModal;
